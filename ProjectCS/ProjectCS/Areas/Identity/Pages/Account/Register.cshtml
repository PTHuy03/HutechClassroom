@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Identity/Pages/Account/_LayoutRegister.cshtml";
}

<style>
    .custom-margin {
        margin-top: 50px; /* Điều chỉnh khoảng cách theo ý muốn */
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eYaRfQjAW3oSev6JQWhg95ZN/QrQ/2+zDsqzU8DIiZ3m4KnxlfOJ9tFM6Y++q4Vb" crossorigin="anonymous">
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-light bg-light" style="border-bottom: 1px solid #b8b6b6">
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index"> <img src="~/classroom-icon-free-vector.jpg" alt="Lớp Học" style="height: 40px; width: auto;">Lớp học</a>
        <!-- Move partial to the right -->
        <div class="ms-auto">
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion" style="border-right: 1px solid #b8b6b6">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index" style="border-bottom: 1px solid #b8b6b6">Trang chủ</a>
                        <div class="sb-sidenav-menu-heading">Chức năng</div>
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="Index">Quản lý tài khoản</a>
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="ResetPassword">Quản lý mật khẩu</a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <section class="vh-100 custom-margin">
                    <div class="container-fluid h-custom">
                        <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-md-9 col-lg-6 col-xl-5">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>
                            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                                    <h1>Tạo tài khoản mới.</h1>
                                    <hr />
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email">Địa chỉ email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.FullName" class="form-control form-control-lg" autocomplete="fullname" aria-required="true" placeholder="FullName" />
                                        <label asp-for="Input.FullName">Tên đầy đủ</label>
                                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.Password">Mật khẩu</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label asp-for="Input.Role">Vai trò</label>
                                        <select asp-for="Input.Role" class="form-control form-control-lg" asp-items="Model.Roles"></select>
                                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                                    </div>

                                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Tạo tài khoản</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
